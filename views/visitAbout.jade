				span(class="glyphicon glyphicon-pencil", style="font-size:12px", data-toggle="modal", data-target="#EditVisitAbout3Panel")
		- each Content in ContentArray3
			if (Content.indexOf("#Paragraph#") >= 0) 
				p #{Content.replace("#Paragraph# ", "")}
			- else
				span #{Content}
				br
		- if(Language == "Ch")
			p
				img(src="/images/About/About_04_#{Language}.png")
				- if(Administrator)
					span(class="glyphicon glyphicon-pencil", style="font-size:12px", data-toggle="modal", data-target="#EditVisitAbout4Panel")
			- each Content in ContentArray4
				if (Content.indexOf("#Paragraph#") >= 0) 
