extends visit

block mainContent
	div(class="About")
		img(class="MainImage", src="/images/About/IMG_About.jpg")
		br
		img(src="/images/About/IMG_Sign.jpg")
		br
		p
			img(src="/images/About/About_01_#{Language}.png")
			- if(Administrator)
				span(class="glyphicon glyphicon-pencil", style="font-size:12px", data-toggle="modal", data-target="#EditVisitAbout1Panel")
		- each Content in ContentArray1
			if (Content.indexOf("#Paragraph#") >= 0) 
				p #{Content.replace("#Paragraph# ", "")}
			- else
				span #{Content}
				br
		p
			img(src="/images/About/About_02_#{Language}.png")
			- if(Administrator)
				span(class="glyphicon glyphicon-pencil", style="font-size:12px", data-toggle="modal", data-target="#EditVisitAbout2Panel")
