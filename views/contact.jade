extends layout

block mainContent
	div(class="ContactUs")
		img(src="/images/ContactUs/Contact_Mail_#{Language}.png")
		&nbsp;&nbsp;
		- if(Administrator)
			span(class="glyphicon glyphicon-pencil", style="font-size:12px", data-toggle="modal", data-target="#EditContent1Panel")
		br
		- each Content in ContentArray1
			if (Content.indexOf("#Paragraph#") >= 0) 
				p #{Content.replace("#Paragraph# ", "")}
			- else
				span #{Content}
				br
		img(src="/images/ContactUs/Contact_Line_#{Language}.png")
		&nbsp;&nbsp;
		- if(Administrator)
			span(class="glyphicon glyphicon-pencil", style="font-size:12px", data-toggle="modal", data-target="#EditContent2Panel")
		br
		- each Content in ContentArray2
			if (Content.indexOf("#Paragraph#") >= 0) 
				p #{Content.replace("#Paragraph# ", "")}
			- else
				span #{Content}
				br
		img(src="/images/ContactUs/Contact_Cooperation_#{Language}.png")
		&nbsp;&nbsp;
		- if(Administrator)
			span(class="glyphicon glyphicon-pencil", style="font-size:12px", data-toggle="modal", data-target="#EditContent3Panel")
		br
		- each Content in ContentArray3
			if (Content.indexOf("#Paragraph#") >= 0) 
				p #{Content.replace("#Paragraph# ", "")}
			- else
				span #{Content}
				br
		br
		div(class="Cooperation")
			- if(Language == "Ch")
				textarea(class="Content", placeholder="  提案内容")
				input(class="Company", type="text", placeholder="  公司名称")
				input(class="Name", type="text", placeholder="  姓名")
				input(class="Email", type="text", placeholder="  邮箱地址")
				input(class="Phone", type="text", placeholder="  连络电话")
			- if(Language == "En")
				textarea(class="Content", placeholder="  Proposal")
				input(class="Company", type="text", placeholder="  Company Name")
				input(class="Name", type="text", placeholder="  Contact’s Name")
				input(class="Email", type="text", placeholder="  Email")
				input(class="Phone", type="text", placeholder="  Tel")
			div(class="SubmitButton")
				img(src="/images/ContactUs/SubmitButton.png")
				img(class="SendFail", src="/images/ContactUs/Fail.png")
				img(class="SendSuccess", src="/images/ContactUs/Success.png")
	script(src="/javascripts/contact.js")
block panel
	- if(Administrator)
		div(class="modal fade", id="EditContent1Panel")
			div(class="modal-dialog")
				div(class="modal-content")
					form(action="/fix_text", method="post")
						div(class="modal-header")
							button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
							h4(class="modal-title") Edit ContactUs
						div(class="modal-body")
							div(class="row")
								div(class="col-md-12")
									textarea(class="form-control input-sm", name="Content", rows="10") #{OriginContent1}
						div(class="modal-footer")
							input(type="hidden", name="Language", value="#{Language}")
							input(type="hidden", name="Topic", value="Contact1")
							button(type="button", class="btn btn-default", data-dismiss="modal") Close
							button(type="submit", class="btn btn-primary") Save
		div(class="modal fade", id="EditContent2Panel")
			div(class="modal-dialog")
				div(class="modal-content")
