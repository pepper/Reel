					span #{Content}
					br
block panel
	- if(Administrator)
		div(class="modal fade", id="EditVisitAbout1Panel")
			div(class="modal-dialog")
				div(class="modal-content")
					form(action="/fix_text", method="post")
						div(class="modal-header")
							button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
							h4(class="modal-title") Edit Visit About
						div(class="modal-body")
							div(class="row")
								div(class="col-md-12")
									textarea(class="form-control input-sm", name="Content", rows="10") #{OriginContent1}
						div(class="modal-footer")
							input(type="hidden", name="Language", value="#{Language}")
							input(type="hidden", name="Topic", value="VisitAbout1")
							button(type="button", class="btn btn-default", data-dismiss="modal") Close
