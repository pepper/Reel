extends visit

block mainContent
	div(class="Location")
		- if(Administrator)
			span(class="glyphicon glyphicon-pencil", style="font-size:24px", data-toggle="modal", data-target="#EditVisitLocationPanel")
			br
		table
			tr(class="Description")
				td(class="Description", colspan="2")
					img(src="/images/Visit/Location/Location_01_#{Language}.png")
				td(class="MainMapContainer", rowspan="7")
					div(class="MainMap", language="#{Language}", style="position: absolute; top: 0px;")
						div(class="Level1", style="background: url(/images/Visit/Location/Loaction_Map_Zoom01_#{Language}.jpg) no-repeat; width: 320px; height: 320px;")
						div(style="height: 384px; width: 384px;")
							img(class="Level2", src="/images/Visit/Location/Loaction_Map_Zoom02_#{Language}.jpg", alt="")
							div(class="mapcontent")
						div(style="height: 448px; width: 448px;")
							img(class="Level3", src="/images/Visit/Location/Loaction_Map_Zoom03_#{Language}.jpg", alt="")
							div(class="mapcontent")
						div(style="height: 512px; width: 512px;")
							img(class="Level4", src="/images/Visit/Location/Loaction_Map_Zoom04_#{Language}.jpg", alt="")
							div(class="mapcontent")
						div(style="height: 640px; width: 640px;")
							img(class="Level5", src="/images/Visit/Location/Loaction_Map_Zoom05_#{Language}.jpg", alt="")
							div(class="mapcontent")
					div(class="ExternalMap ZoomIn", style="position: absolute; top: 20px; left: 450px;")
						img(src="/images/Visit/Location/Loaction_Map_ZoomIn_L.jpg")
					div(class="ExternalMap ZoomOut", style="position: absolute; top: 40px; left: 450px;")
						img(src="/images/Visit/Location/Loaction_Map_ZoomOut_L.jpg")
					div(class="ExternalMap Baidu", style="position: absolute; top: 280px; left: 450px;")
						a(target="_blank", href="http://j.map.baidu.com/9sqd8")
							img(class="HoverLink ChangeImage", src="/images/Visit/Location/Loaction_B_Baidu_L.jpg")
					div(class="ExternalMap Google", style="position: absolute; top: 300px; left: 450px;")
						a(target="_blank", href="https://goo.gl/maps/Ktv6ovUtvn52")
							img(class="HoverLink ChangeImage", src="/images/Visit/Location/Loaction_B_Google_L.jpg")
			tr(class="Description")
				td(class="Description", colspan="2")
					- if(Language == "Ch")
						| 商场地址&nbsp;&nbsp;&nbsp;&nbsp;
					- if(Language == "En")
						| Address&nbsp;
					| #{ContentArray[0]}
			tr(class="Description")
				td(class="Description", colspan="2")
					- if(Language == "Ch")
						| 营业时间&nbsp;&nbsp;&nbsp;&nbsp;
					- if(Language == "En")
						| Open Hours&nbsp;
					| #{ContentArray[1]}
			tr(class="Description")
				td(class="Description", colspan="2")
					img(src="/images/Visit/Location/Location_02_#{Language}.png")
			tr(class="Description")
				td(class="MiniDescription WithTrain")
					| &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					| #{ContentArray[2]}
				td(class="Sing #{Language}", value="A")
			tr(class="Description")
				td(class="MiniDescription WithTrain")
					| &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					| #{ContentArray[3]}
				td(class="Sing #{Language}", value="B")
			tr(class="BigDescription")
				td(class="BigDescription WithBus", colspan="2")
					| &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					| #{ContentArray[4]}
					br
					| &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					| #{ContentArray[5]}
					br
					| &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					| #{ContentArray[6]}
					br
			tr(class="Description")
				td(class="Description", colspan="2")
					img(src="/images/Visit/Location/Location_03_#{Language}.png")
				td(class="SecondMapContainer", rowspan="5")
					div(class="SecondMap", style="margin-top:5px")
						div(class="Level1", style="background: url(/images/Visit/Location/Location_Park_#{Language}.jpg) no-repeat; width: 320px; height: 320px;")
			tr(class="Description")
				td(class="Description", colspan="2") #{ContentArray[7]}
			- if(Language == "Ch")
				tr(class="Description")
					td(class="Description", colspan="2") #{ContentArray[8]}
			tr(class="Description")
				td(class="Description", colspan="2", style="height:123px;vertical-align:top;padding-top:10px;")
					- if(Language == "En")
						| #{ContentArray[8]}
						br
					| #{ContentArray[9]}
					br
					| #{ContentArray[10]}
	script(src="/javascripts/visitLocation.js")

block panel
	- if(Administrator)
		div(class="modal fade", id="EditVisitLocationPanel" data-language="#{Language}")
			div(class="modal-dialog")
				div(class="modal-content")
					div(class="modal-header")
						button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
						h4(class="modal-title") Edit Visit Location
					div(class="modal-body")
						span Address
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[0]}")
						span Open Hours
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[1]}")
						span Train1
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[2]}")
						span Train2
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[3]}")
						span Bus1
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[4]}")
						span Bus2
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[5]}")
						span Bus3
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[6]}")
						span Parking1
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[7]}")
						span Parking2
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[8]}")
						span Parking3
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[9]}")
						span Parking4
						div(class="row")
							div(class="col-md-12")
								input(class="form-control input-sm", value="#{ContentArray[10]}")
					div(class="modal-footer")
						button(type="button", class="btn btn-default", data-dismiss="modal") Close
						button(type="button", class="btn btn-primary SubmitVisitLocation") Save
